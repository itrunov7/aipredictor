# Financial Modeling Prep API Configuration
# Get your API key from: https://financialmodelingprep.com/developer/docs
FMP_API_KEY=your_financial_modeling_prep_api_key_here

# NextAuth Configuration
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your_nextauth_secret_here_generate_random_string

# Database Configuration (SQLite by default, change for PostgreSQL)
DATABASE_URL=file:./database.db
# For PostgreSQL: postgresql://username:password@localhost:5432/sp500_insights

# Stripe Configuration (Test Mode)
# Get test keys from: https://dashboard.stripe.com/test/apikeys
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key_here
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret_here

# Subscription Configuration
MONTHLY_PRICE_ID=price_your_monthly_price_id_here
YEARLY_PRICE_ID=price_your_yearly_price_id_here

# Backend API Configuration
BACKEND_PORT=3001
API_BASE_URL=http://localhost:3001

# Email Configuration (for notifications)
EMAIL_FROM=noreply@sp500insights.com
EMAIL_PROVIDER=resend
RESEND_API_KEY=re_your_resend_api_key_here

# Security
JWT_SECRET=your_jwt_secret_here_minimum_32_characters
ENCRYPTION_KEY=your_encryption_key_here_32_characters

# Rate Limiting
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW_MS=900000

# Cache Configuration
REDIS_URL=redis://localhost:6379
CACHE_TTL=300

# Development/Production
NODE_ENV=development 